{
  "name": "ChromaDB",
  "version": "0.3.3",
  "slug": "chromadb",
  "description": "Vector database for LLM apps",
  "arch": [
    "amd64",
    "aarch64"
  ],
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "ports": {
    "8000/tcp": 8000
  },
  "map": [
    "config:rw",
    "data:rw"
  ],
  "options": {
    "persist_directory": "/data/chroma",
    "allow_reset": false,
    "anonymized_telemetry": false
  },
  "schema": {
    "persist_directory": "str",
    "allow_reset": "bool",
    "anonymized_telemetry": "bool"
  },
  "image": "local/chromadb",
  "init": true
}
