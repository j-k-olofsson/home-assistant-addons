{
  "name": "ChromaDB",
  "version": "0.2.0",
  "slug": "chromadb",
  "description": "Vector database for LLM apps",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "options": {
    "persist_directory": "/data/chroma",
    "allow_reset": false,
    "anonymized_telemetry": false
  },
  "schema": {
    "persist_directory": "str",
    "allow_reset": "bool",
    "anonymized_telemetry": "bool"
  },
  "arch": ["amd64", "aarch64"],
  "ports": {
    "8000/tcp": 8000
  },
  "map": ["config:rw", "data:rw"],
  "privileged": [],
  "image": null
}
